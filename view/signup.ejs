<!DOCTYPE html>
<html lang="en">
  <head>
      <% include partials/head %>
  </head>
  <button class="btn btn-danger" href="/back" onClick='document.location.href="/back"'>
    back
  </button>
  <div class="text-center">
<div id="form">
    <h1>Please create your account</h1>
    <hr/>
    <form action="/signup" method="post" class="main-form needs-validation" style="width : 300px ; margin: auto" >
        <div class="form-group">
            <label for="form_username">Username:</label>
            <input id="form_username" type="text" name="username"  class="form-control  " placeholder="Please enter an username" required  />
        </div>
      <div class="form-group">
        <label for="form_email">Email:</label>
        <input id="form_email" type="email" name="email" class="form-control" placeholder="Please enter a valid email" required />
      </div>
      <div class="form-group">
        <label for="form_password">Password:</label>
        <input id="form_password" type="password"  name="password" class="form-control  " placeholder="Please enter a password with at least 3 character" required minlength="3" />
      </div>
    
     <button class="btn btn-primary btn-lg" type="submit" href="/signup" >
      Create an account
    </button>
    </form>
    <hr/>
    <script>
      var form = document.querySelector('.needs-validation');

      form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
          }
          form.classList.add('was-validated');
      })
  </script>
  </div>
</div>


</html>