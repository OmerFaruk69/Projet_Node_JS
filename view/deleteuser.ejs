<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/head %>
</head>
<button class="btn btn-danger" href="/back" onClick='document.location.href="/back"'>
    back
</button>
<div class="text-center">
    <div id="form">
        <h1>Please enter your informations</h1>
        <hr />
        <form action="/deleteuser" method="post" class="main-form needs-validation" style="width : 300px ; margin: auto">
            <div class="form-group">
                <label for="form_username">Username:</label>
                <input id="form_username" type="text" name="username" class="form-control  "
                    placeholder="Please enter your username" required />
            </div>
            <div class="form-group">
                <label for="form_password">Password:</label>
                <input id="form_password" type="password" name="password" class="form-control  "
                    placeholder="Please enter your password" required minlength="3" />
            </div>

            <button class="btn btn-primary btn-lg" type="submit" href="/signup">
                Delete user
            </button>
        </form>
        <hr />
        <script>
            var form = document.querySelector('.needs-validation');

            form.addEventListener('submit', function (event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            })
        </script>
    </div>
</div>


</html>